<% if(currentUser.isAdmin === true) { %>
<!--admin sidebar-->
<aside class="col-md-2 admin-sidebar">
    <div class="current-user t-center">
        <figure class="current-user__img">
            <img src="/assets/img/admin.png" alt="" class="img-circle">
        </figure>
        <div class="current-user__name d-block">
            <a href="/dashboard/profile/<%= currentUser._id %>/edit"><%= currentUser.firstName + ' ' + currentUser.lastName %></a>
        </div>
        <span class="current-user__role d-block">Admin view</span>
        <a href="/admin/gifts/new" class="btn btn-primary">Create Gift</a>
    </div>
    <nav class="nav sidebar">
        <ul class="nav__list">
            <li class="nav__item"><a href="/admin/users">Members</a></li>
            <li class="nav__item"><a href="/admin/gifts?filter=review">Gifts</a></li>
            <li class="nav__item"><a href="/logout">Sign out</a></li>
        </ul>
    </nav>
</aside>
<!--admin sidebar-->

<% } else { %>

<!--user sidebar-->
<aside class="col-md-2 admin-sidebar">
    <div class="current-user t-center">
        <figure class="current-user__img">
            <img src="/assets/img/user.png" alt="" class="img-circle">
        </figure>
        <div class="current-user__name d-block">
            <a href="/dashboard/profile/<%= currentUser._id %>/edit"><%= currentUser.firstName + ' ' + currentUser.lastName %></a>
        </div>
        <div class="current-user__name d-block">
            <span class="current-user__role d-block"><%= currentUser.aliasFirstName + ' ' + currentUser.aliasLastName %></span>
        </div>
        <a href="/dashboard/share/" class="btn btn-primary">Share</a>
    </div>
    <nav class="nav sidebar">
        <ul class="nav__list">
            <li class="nav__item"><a href="/dashboard/received">Received</a></li>
            <li class="nav__item"><a href="#">Declined</a></li>
            <li class="nav__item"><a href="#">Pending</a></li>
            <li class="nav__item"><a href="#">Paid</a></li>
            <li class="nav__item"><a href="/logout">Sign out</a></li>
        </ul>
    </nav>
</aside>
<!--user sidebar-->
<% } %>
